<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <title>Node Starter</title>
    <!-- load local stylesheet (css) -->
    <link rel="stylesheet" href="/styles.css" />
    <!-- loading jquery -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
</head>
<body>
    <div id="flashes">
        <% if (messages.error) { %>
          <div id="errors">
            <% messages.error.forEach( msg => {%>
            <p><%= msg %></p>
            <% }) %>
          </div>
          <% } %>
        
          <% if (messages.info) { %>
          <div id="info">
            <% messages.info.forEach( msg => {%>
            <p><%= msg %></p>
            <% }) %>
          </div>
          <% } %>
      </div>

      <%- include("partials/navbar.ejs", { uid: uid }) %>

      <div id="content">

        <h1>Update Profile</h1>
    
        <form method="POST" action="/edit/<%= uid %>/">
          <table>
              <tr><td>UID</td><td><%= user.UID %></td></tr>
            <tr>
              <td><label for="username">Username</label></td>
              <td>
                  
                  <input id="username"
                         name="username"
                         value="<%= user.username %>">
              </td>
            </tr>
            <tr>
              <td><label for="aboutMe">About Me</label></td>
              <td>
                  <input id="aboutMe"
                         name="aboutMe"
                         value="<%= user.aboutme %>">
              </td>
            </tr>
            <tr><td>Password</td><td><%= user.password %></td></tr>
            <tr><td>Badges</td><td><%= user.badges %></td></tr>
          </table>
          <input type="submit" value="update">
        </form>
    
        </div>
            <!-- load local js -->
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
        <script src="/main.js"></script>

</body>