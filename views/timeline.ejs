<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <title>Node Starter</title>
    <!-- load local stylesheet (css) -->
    <link rel="stylesheet" href="/styles.css" />
    <!-- loading jquery -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
</head>
<body>
    <%- include("partials/navbar.ejs", { uid: uid }) %>
    
    <ul>
        <% userPosts.forEach( (post) => {  %>
            <div class="post">
                <div class="image">
                    <img src="<%= post['path'] %>">
                </div>
                <div>
                    <li>
                        <div class="info">
                            <h1 class="username"><%= post['user'] %></h1> 
                            <h2 class="location"><%= post['location'] %></h2>
                        </div>
                        <div class="time">
                            <h2><%= post['time'] %></h2>
                        </div>    
                        <div class="animal">
                            <h2>
                                <%= post['animal'] %>
                            </h2>
                        </div>
                        <div class="caption">
                            <p> <%= post['caption'] %></p>
                        </div>
                        <div class="likeComment">
                            <nobr>        
                                <form class="likeForm" action="/like" method="post">
                                    <input type="hidden" name="postTime" value="<%= post['time'] %>">
                                    <div class="buttonDiv">
                                        <button type="image" class="likeButton"><img src="../public/like.png" alt="Like" width="50px"></button>
                                    </div>
                                    <div class="likeDiv">
                                        <h2 class="likes"><%= post['likes'] %> </h2>
                                    </div>
                                </form>
                            </nobr>

                            <% if (post['comments']){%>
                                <h2 class="comments">Comments: <%= post['comments'].length %> </h2> 
                            <% }%>
        
                        </div>
                    </li>
                </div>
            </div>
        <% }); %>
    </ul>

    <!-- load local js -->
    <script src="/main.js"></script>
    
</body>
</html>
