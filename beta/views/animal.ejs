
<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <title>Search</title>
  <!-- load local stylesheet (css) -->
  <link rel="stylesheet" href="/styles.css" />
  <link rel="icon" type="image/x-icon" href="/logo.png">

  <!-- loading jquery -->
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
</head>

<body>
    <center>
    <%- include("partials/navbar.ejs", { uid: uid }) %>
    <%- include("partials/searchbar.ejs") %>
    </br>
    <h1>Posts related to <%= term %>:</h1>
    </center>

    <ul>
        <% animals.forEach( (post) => {  %>
            <div class="post">
                <div class="image">
                    <img src="<%= post['path'] %>">
                </div>
                <div>
                    <li>
                        <div class="info">
                            <h1 class="username"><%= post['user'] %></h1> 
                            <a href = "/profile/<%= post['UID'] %>"> View <%= post['user'] %>'s profile</a>
                            <h2 class="location"><%= post['location'] %></h2>
                        </div>
                        <div class="time">
                            <h2><%= post['time'] %></h2>
                        </div>    
                        <div class="animal">
                            <h2>
                                <%= post['animal'] %>
                            </h2>
                        </div>
                        <div class="caption">
                            <p> <%= post['caption'] %></p>
                        </div>
                    </li>
                </div>
                <div>
                    <form action="/comment/<%=post.PID%>" method="get">
                        <button class="goToPost">Go to post</button>
                    </form>
                </div>
            </div>
           
        <% }); %>
    </ul>
    <!-- load local js -->
    <script src="/main.js"></script>
</body>

</html>